<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_24sdp"
    android:scrollbars="none"
    tools:context=".activities.WaitingRoomActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nomeStanza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoomName"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_30sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/hostStanza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Host"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_16sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="@color/colorPrimary"
            />
        <View
            android:layout_gravity="center"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/silver"
            android:layout_marginTop="@dimen/_8sdp"

            ></View>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_270sdp"
            android:layout_marginTop="@dimen/_17sdp">

        <TextView
            android:id="@+id/descrizioneStanza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Questa stanza Ã¨ dedicata a tutti gli appassionati di calcio"
            android:textAlignment="center"
            android:textColor="#919090"
            android:textSize="@dimen/_15sdp" />

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_input"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/gray"
                android:text="Cercando un interlocutore"
                android:textSize="@dimen/_16sdp" />

            <ProgressBar
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                />
            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/silver"
                ></View>
            <TextView
                android:id="@+id/termina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Interrompi"
                android:textColor="#E30000"
                android:textSize="@dimen/_18sdp" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>