<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/background_input"
            android:drawableTop="@drawable/ic_exit"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_265sdp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_60sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/circle_image"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            />

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_23sdp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_37sdp"
            android:background="@drawable/background_input"
            android:backgroundTint="#CFCFCF"
            android:text="Modifica profilo"
            android:fontFamily="@font/roboto_medium"
            android:drawableStart="@drawable/ic_settings"
            android:textColor="#565656"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_253sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_menu"
        app:itemIconTint="@drawable/bottom_menu"
        app:itemTextColor="@drawable/bottom_menu"
        app:menu="@menu/bottom_menu_navigation"
        app:labelVisibilityMode="selected"
        />

</androidx.constraintlayout.widget.ConstraintLayout>